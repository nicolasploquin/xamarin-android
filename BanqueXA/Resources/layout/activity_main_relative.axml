<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_layout_relative"
    >
    <TextView
        android:id="@+id/main_description"
        android:text="@string/main_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true"
        />
    <Button
        android:id="@+id/main_nav_customers"
        android:text="@string/customers_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_description"
        />
	<Button
        android:id="@+id/main_nav_customerform"
        android:text="@string/customerform_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/main_nav_customers"
        android:layout_below="@id/main_description"
        android:layout_alignParentRight="true"
        />
	<Button
        android:id="@+id/main_nav_demo"
        android:text="@string/demo_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />
	<Button
        android:id="@+id/main_nav_scan"
        android:text="@string/scan_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/main_nav_demo"
        />
</RelativeLayout>

